<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="icon_color">@color/darkWindowBackground</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:checkboxStyle">@style/CheckBoxStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="dialogTheme">@style/DialogTheme</item>
    </style>

    <style name="AppThemeFullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LoginTheme" parent="AppThemeFullScreen">
        <item name="colorPrimary">@color/material_indigo_700</item>
        <item name="colorPrimaryDark">@color/material_indigo_900</item>
        <item name="colorAccent">@color/material_blue_accent_700</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="icon_color">@color/white</item>
        <item name="card_background">@color/material_light_white</item>
    </style>

    <style name="InfoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/material_blue_accent_700</item>
        <item name="colorPrimaryDark">@color/material_indigo_900</item>
        <item name="colorAccent">@color/material_blue_accent_700</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="icon_color">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
        <item name="icon_color">@color/darkWindowBackground</item> <!-- to display the icons properly since this theme is the default -->

    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <style name="TextAppearance.Design.CollapsingToolbar.Expanded.LightText" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TopLevelActivityTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="FullScreenActivityTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:textColorPrimary">@color/anthracite</item>
        <item name="actionMenuTextColor">@color/anthracite</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/light_blue</item>
        <item name="android:textColorPrimary">@color/dark_grey</item>
        <item name="android:windowTitleStyle">@style/TextAppearanceTitle</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="ProgressDialogTheme" parent="DialogTheme">
        <item name="colorAccent">@color/scout_orange</item>
    </style>

    <style name="PrimaryButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/grey</item>
        <item name="buttonStyle">@style/PrimaryButtonStyle</item>
    </style>

    <style name="SecondaryButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/grey</item>
        <item name="colorAccent">@color/white</item>
        <item name="buttonStyle">@style/SecondaryButtonStyle</item>
    </style>

    <style name="PrimaryFloatingButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/grey</item>
        <item name="buttonStyle">@style/PrimaryFloatingButtonStyle</item>
    </style>

    <style name="SecondaryFloatingButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/grey</item>
        <item name="colorAccent">@color/white</item>
        <item name="buttonStyle">@style/SecondaryFloatingButtonStyle</item>
    </style>

    <style name="LinkButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/grey</item>
        <item name="colorAccent">@color/white</item>
        <item name="buttonStyle">@style/LinkButtonStyle</item>
    </style>

    <style name="SeekBar">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/light_blue</item>
    </style>

</resources>