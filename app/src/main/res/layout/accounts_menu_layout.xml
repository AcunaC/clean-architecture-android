<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border">

            <FrameLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/regular"
                android:paddingTop="@dimen/regular">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/regular"
                    android:src="@drawable/ic_logout"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:paddingStart="@dimen/xxx_large"
                    android:text="@string/logout"
                    android:textColor="@color/search_tab_highlighter"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border">

            <FrameLayout
                android:id="@+id/addAccLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/regular"
                android:paddingTop="@dimen/regular">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/regular"
                    android:src="@drawable/ic_add"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:paddingStart="@dimen/xxx_large"
                    android:text="@string/add_account"
                    android:textColor="@color/search_tab_highlighter"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toggleAccountsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/regular"
            android:background="@drawable/bottom_border"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <FrameLayout
                android:id="@+id/toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/regular"
                android:paddingTop="@dimen/regular">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/regular"
                    android:src="@drawable/ic_profile"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:paddingEnd="@dimen/xxx_large"
                    android:paddingStart="@dimen/xxx_large"
                    android:text="@string/choose_account"
                    android:textColor="@color/search_tab_highlighter"/>

                <ImageView
                    android:id="@+id/toggleImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="@dimen/small"
                    android:layout_marginStart="@dimen/small"
                    android:rotation="180"
                    android:src="@drawable/ic_arrow_drop_down"/>
            </FrameLayout>

            <!--<com.duyp.architecture.mvvm.ui.widgets.recyclerview.DynamicRecyclerView-->
                <!--android:id="@+id/accLists"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:nestedScrollingEnabled="false"-->
                <!--app:layoutManager="@string/linear_layout_manager"-->
                <!--tools:visibility="gone"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/togglePinned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/regular"
                android:paddingTop="@dimen/regular">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/regular"
                    android:src="@drawable/ic_pin"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:paddingEnd="@dimen/xxx_large"
                    android:paddingStart="@dimen/xxx_large"
                    android:text="@string/pinned"
                    android:textColor="@color/search_tab_highlighter"/>

            </FrameLayout>

            <!--<com.duyp.architecture.mvvm.ui.widgets.recyclerview.DynamicRecyclerView-->
                <!--android:id="@+id/pinnedList"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:nestedScrollingEnabled="false"-->
                <!--app:layoutManager="@string/linear_layout_manager"-->
                <!--tools:visibility="gone"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border">

            <FrameLayout
                android:id="@+id/repos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/regular"
                android:paddingTop="@dimen/regular">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/regular"
                    android:src="@drawable/ic_repo"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:paddingStart="@dimen/xxx_large"
                    android:text="@string/repos"
                    android:textColor="@color/search_tab_highlighter"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border">

            <FrameLayout
                android:id="@+id/starred"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/regular"
                android:paddingTop="@dimen/regular">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/regular"
                    android:src="@drawable/ic_star_filled"/>

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:paddingStart="@dimen/xxx_large"
                    android:text="@string/starred"
                    android:textColor="@color/search_tab_highlighter"/>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>